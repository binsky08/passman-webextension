{
  "name": "__MSG_extName__",
  "short_name": "__MSG_extName__",
  "version": "2.1.2",
  "manifest_version": 3,
  "author": "Sander Brand",
  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "homepage_url": "https://github.com/nextcloud/passman-webextension",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "ids": [""]
  },
  "background": {
  "scripts": [
    "/js/background/service-worker.js"
  ],
  "type": "module"
  },
  // required changes for chrome
  // "background": {
  //   "service_worker": "/js/background/service-worker.js",
  //   "type": "module"
  // },
  "action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Passman",
    "default_popup": "/html/browser_action/browser_action.html"
  },
  "commands":{
    "_execute_action": {
      "suggested_key": {
        "windows": "Alt+Down",
        "mac": "Alt+Down",
        "chromeos": "Alt+Down",
        "linux": "Alt+Down"
      }
    }
  },
  "permissions": [
    "notifications",
    "tabs",
    "clipboardWrite",
    "scripting",
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "all_frames": true,
      "js": [
        "/js/vendor/jquery/jquery.js",
        "/js/lib/promise.js",
        "/js/lib/API/base.js",
        "/js/lib/API/runtime.js",
        "/js/lib/API/extension.js",
        "/js/lib/API/storage.js",
        "/js/lib/API/cookies.js",
        "/js/lib/API/i18n.js",
        "/js/lib/jQuerytoObject.js",
        "/js/lib/findForm.js",
        "/js/lib/parseUrl.js",
        "/js/lib/parseTLD.js",
        "/js/lib/data/tlds.js",
        "/js/lib/domchanged.js",
        "/js/background/inject/inject.js"
      ],
      "css":[
        "/css/doorhanger-iframe.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "html/inject/doorhanger.html" ],
      "matches": [ "*://*/*" ]
    },
    {
      "resources": [ "html/inject/password_picker.html" ],
      "matches": [ "*://*/*" ]
    },
    {
      "resources": [ "html/inject/auto_login.html" ],
      "matches": [ "*://*/*" ]
    },
    {
      "resources": [ "fonts/*" ],
      "matches": [ "*://*/*" ]
    },
    {
      "resources": [ "icons/*" ],
      "extension_ids": ["*"],
      "matches": [ "*://*/*" ]
    }
  ]
}
